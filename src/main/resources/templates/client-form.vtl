<form action="/stylists/$stylist.getId()" method="post">
  <div class="form-group">
    <label for="client-name">Client Name</label><br>
    <input type="text" name="client-name" id="client-name" required>
  </div>
  <div class="form-group">
    <label for="client-phone">Client Phone Number</label><br>
    <input type="text" name="client-phone" id="client-phone" required>
  </div>
  <button type="submit" class="btn btn-primary">Add a Client</button>
</form>
